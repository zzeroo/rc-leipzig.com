<div id="main">
  <div class="ym-wrapper">
    <section class="ym-grid linearize-level-1">
    <article class="ym-g99 ym-gl content">

    <h2>Anmeldung</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "ym-form linearize-form ym-columnar"}) do |f| %>
      <div class="ym-fbox-text">
        <%= f.label :login %>
        <%= f.text_field :login %></div>

      <div class="ym-fbox-text">
        <%= f.label :password %>
        <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? %>
        <div class="ym-fbox-check"><%= f.label :remember_me %><%= f.check_box :remember_me %></div>
      <% end %>

      <div class="ym-fbox-text"><%= f.submit "Login", :class => "ym-button ym-add" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

    </article>
    </section>
  </div>
</div>


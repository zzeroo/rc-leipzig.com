<div id="main" class="ym-cbox">

    <h2>Anmeldung</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "ym-form linearize-form"}) do |f| %>
      <div class="ym-fbox-text">
        <%= f.label :login %>
        <%= f.text_field :login %></div>

      <div class="ym-fbox-text">
        <%= f.label :password %>
        <%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? %>
        <div class="ym-fbox-check"><%= f.label :remember_me %><%= f.check_box :remember_me %></div>
      <% end %>

      <div class="ym-fbox-text"><%= f.submit "Login", :class => "ym-button ym-add" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

</div>


<div id="main">
  <div class="ym-wrapper">
    <section class="box info"><div class="ym-grid linearize-level-1">
      <%= image_tag "race-flags-small.png" %>
    </div></section>
    <section>

    <article class="content">

    <p>
    <b>Vorname:</b>
    <%= @subscriber.firstname %>
    </p>

    <p>
    <b>Nachname:</b>
    <%= @subscriber.lastname %>
    </p>

    <p>
    <b>Email:</b>
    <%= @subscriber.email %>
    </p>

    <p>

    <p>
    <b>Klasse:</b>
    <%= @subscriber.grade %>
    </p>

    <p>
    <%= link_to 'Bearbeiten', edit_event_subscriber_path(@event), :class => "ym-button ym-add" %>

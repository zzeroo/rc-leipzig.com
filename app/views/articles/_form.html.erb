<%= form_for(@article, :html => { :class => "ym-form linearize-form ym-columnar"} ) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation" class="box error">
      <h2>Folgende Fehler verhindert das erfolgreiche Speichern des Artikels</h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 3 %>
  </div>

  <%= f.fields_for :attachments do |builder| %>
    <%= render 'attachment_fields', :f => builder %>
  <% end %>

  <%= link_to_add_fields "Anhang anhÃ¤ngen", f, :attachments %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

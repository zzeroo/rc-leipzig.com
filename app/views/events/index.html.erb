<div id="main">
  <div class="ym-wrapper">
    <section class="box info"><div class="ym-grid linearize-level-1"><%= image_tag "race-flags-small.png" %></div></section>
    <section class="ym-grid linearize-level-1">
    <article class="ym-g99 ym-gl content">

    <strong><p class="Stil1"><font face="Arial, Helvetica, sans-serif">Termine</font></p></strong>
    <p><strong><font size="4" face="Arial, Helvetica, sans-serif">An Rennwochenenden ist Samstags die Strecke f&uuml;r freies Training ge&ouml;ffnet. </font></strong></p>

    <table class="bordertable">
      <tr>
        <th><%= sortable "von:", :startdate %></th>
        <th><%= sortable "bis:", :enddate %></th>
        <th><%= sortable "Event", :title %></th>
        <th><%= sortable "Beschreibung", :desc %></th>
        <th><b>Nennliste</b></th>
      </tr>

      <% @events.each do |event| %>
        <tr>
          <td><%= event.startdate.strftime('%d.%m.%Y') %></td>
          <td><%= event.enddate.strftime('%d.%m.%Y') %></td>
          <td><%= link_to event.title, event %></td>
          <td><%= event.description %></td>
          <td><center><%= link_to event.subscribers.size, event_subscribers_path(event) %></center></td>
          <%- if current_user.try(:admin?) %><td><%= link_to 'Bearbeiten', edit_event_path(event), :class => "ym-button ym-edit" %></td><%- end %>
          <%- if current_user.try(:admin?) %><td><%= link_to 'LÃ¶schen', event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "ym-button ym-delete" %></td><%- end %>
          <td><b><%= link_to 'in Nennliste eintragen', new_event_subscriber_path(event), :class => "ym-button" %></b></td>
        </tr>
      <% end %>
    </table>

    <br />

    <%- if current_user.try(:admin?) %><p><%= link_to 'Neuer Termin', new_event_path, :class => "ym-button ym-add" %></p><%- end %>
    </article>
    </section>
  </div>
</div>


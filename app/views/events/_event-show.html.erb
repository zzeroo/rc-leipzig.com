<% if defined?(event) then @event = event end -%>

<h1><%= @event.title %></h1>
<h2><b>Von:</b>&nbsp;<%= @event.startdate %>&nbsp;<b>Bis:</b>&nbsp;<%= @event.enddate %></h2>

<% unless @event.description.blank? %>
  <div><b>Beschreibung:</b><br />
    <%= @event.description %>
  </div>
<% else -%>
  <div>Zur Zeit keine weiteren Informationen zu diesem Termin vorhanden!</div>
<% end -%>


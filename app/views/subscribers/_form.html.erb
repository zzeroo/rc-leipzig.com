<%= form_for([@event, @subscriber]) do |f| %>
  <% if @subscriber.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h2>

      <ul>
      <% @subscriber.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Vorname" %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label "Nachname" %><br />
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Klasse" %><br />
    <%= f.select :grade, ["Rookie Challenge", "Shortcourse Challenge", "2WD Challenge", "4WD Challenge"], { :include_blank => false } %>
  </div>
  <div class="actions">
    <%= f.submit "Eintrag speichern" %>
  </div>
<% end %>
